<body>

<!-- Nữ -->
<h1>Thời trang Nữ</h1>
<div class="grid" id="female-styles"></div>

<!-- Nam -->
<h1>Thời trang Nam</h1>
<div class="grid" id="male-styles"></div>

<!-- Cấp 3 -->
<section id="level3">
  <h1 id="style-title"></h1>
  <div class="grid" id="outfit-list"></div>
  <button onclick="backToMain()">Quay lại</button>
</section>

<script>
  const maleStyles = [
    {key: "casual", name: "Phong cách thường ngày"},
    {key: "business", name: "Công sở / Trang trọng"},
    {key: "streetwear", name: "Đường phố"},
    {key: "athleisure", name: "Thể thao thời trang"},
    {key: "outdoor", name: "Ngoài trời"},
    {key: "minimal", name: "Tối giản"}
  ];

  const femaleStyles = [
    {key: "casual", name: "Phong cách thường ngày"},
    {key: "elegant", name: "Thanh lịch / Dự tiệc"},
    {key: "boho", name: "Bohemian"},
    {key: "athleisure", name: "Thể thao thời trang"},
    {key: "streetwear", name: "Đường phố"},
    {key: "minimal", name: "Tối giản"}
  ];

  const outfitsData = [];

  function seedData() {
    maleStyles.forEach(style => {
      for (let i = 1; i <= 4; i++) {
        outfitsData.push({
          gender: "nam",
          style: style.key,
          name: `${style.name} ${i}`,
          shortDescription: "Mô tả ngắn gọn...",
          price: 500000 + i * 10000,
          images: [`https://picsum.photos/seed/${style.key}-${i}/400/300`]
        });
      }
    });
    femaleStyles.forEach(style => {
      for (let i = 1; i <= 4; i++) {
        outfitsData.push({
          gender: "nu",
          style: style.key,
          name: `${style.name} ${i}`,
          shortDescription: "Mô tả ngắn gọn...",
          price: 600000 + i * 10000,
          images: [`https://picsum.photos/seed/${style.key}-f-${i}/400/300`]
        });
      }
    });
  }

  function renderStyles() {
    const femaleContainer = document.getElementById("female-styles");
    femaleStyles.forEach(style => {
      const card = document.createElement("div");
      card.className = "card";
      card.innerHTML = `
        <img src="https://picsum.photos/seed/${style.key}-f/400/300" alt="${style.name}">
        <p>${style.name}</p>
      `;
      card.addEventListener("click", () => showOutfits("nu", style));
      femaleContainer.appendChild(card);
    });

    const maleContainer = document.getElementById("male-styles");
    maleStyles.forEach(style => {
      const card = document.createElement("div");
      card.className = "card";
      card.innerHTML = `
        <img src="https://picsum.photos/seed/${style.key}-m/400/300" alt="${style.name}">
        <p>${style.name}</p>
      `;
      card.addEventListener("click", () => showOutfits("nam", style));
      maleContainer.appendChild(card);
    });
  }

  function showOutfits(gender, style) {
    window.scrollTo(0, 0);
    document.getElementById("female-styles").style.display = "none";
    document.getElementById("male-styles").style.display = "none";
    document.querySelectorAll("h1")[0].style.display = "none";
    document.querySelectorAll("h1")[1].style.display = "none";

    const level3 = document.getElementById("level3");
    document.getElementById("style-title").textContent = `${style.name} (${gender === "nam" ? "Nam" : "Nữ"})`;

    const list = outfitsData.filter(o => o.gender === gender && o.style === style.key);
    const container = document.getElementById("outfit-list");
    container.innerHTML = list.map(o => `
      <div class="outfit">
        <img src="${o.images[0]}" alt="${o.name}">
        <h3>${o.name}</h3>
        <p>${o.shortDescription}</p>
        <p><strong>${o.price.toLocaleString()}₫</strong></p>
      </div>
    `).join('');

    level3.style.display = "block";
    requestAnimationFrame(() => {
      level3.classList.add("show");
    });
  }

  function backToMain() {
    const level3 = document.getElementById("level3");
    level3.classList.remove("show");
    setTimeout(() => {
      level3.style.display = "none";
      document.getElementById("female-styles").style.display = "grid";
      document.getElementById("male-styles").style.display = "grid";
      document.querySelectorAll("h1")[0].style.display = "block";
      document.querySelectorAll("h1")[1].style.display = "block";
    }, 400);
  }

  seedData();
  renderStyles();
</script>

</body>
</html>
