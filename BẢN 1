<title>Fashion Showcase</title>
<style>
  body {
    font-family: Arial, sans-serif;
    margin: 0;
    background: #f9f9f9;
  }
  h1 {
    margin: 0;
    padding: 1rem;
    background: #333;
    color: #fff;
    text-align: center;
    letter-spacing: 1px;
  }
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1rem;
    padding: 1rem;
  }
  /* Card phong cách */
  .card {
    background: #fff;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    cursor: pointer;
    transition: transform 0.4s ease, box-shadow 0.4s ease;
  }
  .card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    display: block;
    transition: transform 0.4s ease, filter 0.4s ease;
  }
  .card p {
    margin: 0;
    padding: 0.6rem;
    background: #fff;
    text-align: center;
    font-weight: bold;
    font-size: 0.95rem;
    border-top: 1px solid #eee;
  }
  .card:hover {
    transform: translateY(-5px) scale(1.02);
    box-shadow: 0 8px 20px rgba(0,0,0,0.2);
  }
  .card:hover img {
    transform: scale(1.08);
    filter: brightness(1.05);
  }

  /* Cấp 3 */
  #level3 {
    display: none;
    padding: 1rem;
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.4s ease, transform 0.4s ease;
  }
  #level3.show {
    display: block;
    opacity: 1;
    transform: translateY(0);
  }

  /* Outfit cấp 3 */
  .outfit {
    background: #fff;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .outfit:hover {
    transform: translateY(-5px) scale(1.02);
    box-shadow: 0 8px 20px rgba(0,0,0,0.2);
  }
